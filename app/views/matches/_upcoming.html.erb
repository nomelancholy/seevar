<% match = local_assigns[:match] %>
<div class="ledger-surface p-6 md:p-10">
  <div class="flex justify-center mb-4">
    <%= match_status_badge(:upcoming) %>
  </div>
  <h1 class="text-2xl md:text-4xl font-black italic tracking-tighter uppercase text-center mb-2">
    <%= match[:home] %> vs <%= match[:away] %>
  </h1>
  <p class="text-center text-[var(--text-muted)] font-mono text-sm md:text-base mb-8">
    <%= match[:league] %> Â· Round <%= match[:round] %>
  </p>
  <div class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-12 text-center">
    <div class="flex-1">
      <p class="text-lg md:text-xl font-bold italic"><%= match[:home] %></p>
    </div>
    <div class="font-mono font-black text-2xl md:text-3xl text-[var(--text-muted)]">VS</div>
    <div class="flex-1">
      <p class="text-lg md:text-xl font-bold italic"><%= match[:away] %></p>
    </div>
  </div>
  <div class="mt-10 pt-8 border-t border-[var(--ledger-border)] text-center">
    <p class="font-mono text-sm text-[var(--text-muted)]"><%= match[:date] %> <%= match[:time] %></p>
    <p class="font-mono text-sm text-[var(--text-muted)] mt-1"><%= match[:venue] %></p>
  </div>
</div>
