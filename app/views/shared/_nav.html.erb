<%# ============================================================
    NAV + USER DRAWER  (data-controller="user-drawer" 로 래핑)
    ============================================================ %>
<div data-controller="user-drawer">

<nav class="max-w-7xl mx-auto flex flex-col md:flex-row items-center gap-4 md:gap-8 mb-8 md:mb-12 border-b border-[var(--ledger-border)] pb-6">

  <%# 1) 로고 + 구분선 + 모바일 프로필 토글 %>
  <div class="flex items-center justify-between w-full md:w-auto gap-4">
    <%= link_to root_path, class: "text-2xl md:text-3xl font-black tracking-tighter leading-none italic hover:opacity-80 transition-opacity" do %>
      SEE <span class="text-[var(--accent-var)]">VAR</span>
    <% end %>
    <div class="h-8 w-px bg-zinc-800 hidden md:block"></div>
    <div class="md:hidden flex items-center gap-3 cursor-pointer" data-action="click->user-drawer#toggle">
      <div class="relative">
        <div class="w-9 h-9 rounded-full border border-zinc-700 overflow-hidden bg-zinc-800 flex items-center justify-center">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-zinc-500"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        </div>
        <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-white rounded-full border border-zinc-900 flex items-center justify-center p-0.5 shadow-lg z-10">
          <span class="text-[8px] font-black text-black leading-none">인</span>
        </div>
      </div>
    </div>
  </div>

  <%# 2) 검색창 %>
  <div class="relative flex-1 w-full max-w-md">
    <input type="text" placeholder="SEARCH MATCH, PLAYER, DATA..." autocomplete="off"
      class="w-full bg-[#1c1f24] border border-[var(--ledger-border)] px-4 py-2 text-xs md:text-sm font-mono focus:outline-none focus:border-[var(--accent-var)] transition-colors">
    <span class="absolute right-3 top-2.5 opacity-30 pointer-events-none">
      <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
    </span>
  </div>

  <%# 3) 메뉴 링크 + 데스크톱 프로필 %>
  <div class="flex items-center justify-center md:justify-end gap-4 md:gap-8 text-[10px] md:text-xs font-bold tracking-widest font-mono w-full md:w-auto overflow-x-auto no-scrollbar py-2 md:py-0">
    <%= link_to "ABOUT",    "#",          class: "menu-link text-[var(--text-muted)] hover:text-white whitespace-nowrap" %>
    <%= link_to "ARCHIVE",  matches_path, class: "menu-link text-[var(--text-muted)] hover:text-white whitespace-nowrap" %>
    <%= link_to "REFEREES", "#",          class: "menu-link text-[var(--text-muted)] hover:text-white whitespace-nowrap" %>
    <%= link_to "TEAMS",    "#",          class: "menu-link text-[var(--text-muted)] hover:text-white whitespace-nowrap" %>

    <div class="hidden md:flex items-center gap-3 pl-4 border-l border-zinc-800 cursor-pointer group" data-action="click->user-drawer#toggle">
      <div class="flex flex-col items-end">
        <span class="text-[9px] text-[var(--text-muted)] leading-none mb-1 uppercase">Supporting</span>
        <span class="text-[10px] text-white leading-none font-black italic">인천 유나이티드</span>
      </div>
      <div class="relative">
        <div class="w-11 h-11 rounded-full border border-zinc-700 overflow-hidden bg-zinc-800 flex items-center justify-center group-hover:border-white transition-colors">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-zinc-500"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
        </div>
        <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-white rounded-full border border-zinc-900 flex items-center justify-center p-0.5 shadow-lg z-10">
          <span class="text-[9px] font-black text-black leading-none">인</span>
        </div>
      </div>
    </div>
  </div>

</nav>

<%# ============================================================
    USER DRAWER  (우측 슬라이드 패널)
    ============================================================ %>
<div data-user-drawer-target="overlay"
     class="fixed inset-0 z-[4000] hidden"
     data-action="click->user-drawer#closeOnOverlay">
  <div data-user-drawer-target="drawer"
       class="absolute top-0 right-0 w-80 h-full bg-[var(--ledger-surface)] border-l border-[var(--ledger-border)] shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out">
    <div class="p-8">

      <div class="flex justify-between items-center mb-12">
        <h2 class="text-2xl font-black italic tracking-tighter uppercase">MY PAGE</h2>
        <button data-action="click->user-drawer#toggle" class="text-zinc-500 hover:text-white">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6L6 18M6 6l12 12"/></svg>
        </button>
      </div>

      <%# 유저 아바타 + 닉네임 %>
      <div class="flex items-center gap-4 mb-4 p-4 bg-zinc-900/50 border border-zinc-800">
        <div class="relative">
          <div class="w-16 h-16 rounded-full border border-zinc-700 overflow-hidden bg-zinc-800 flex items-center justify-center">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="text-zinc-500"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
          </div>
          <div class="absolute -bottom-1 -right-1 w-7 h-7 bg-white rounded-full border border-zinc-900 flex items-center justify-center p-1 shadow-lg z-10">
            <span class="text-[9px] font-black text-black leading-none">인</span>
          </div>
        </div>
        <div>
          <p class="text-lg font-black italic">USER_7721</p>
          <div class="whistle-badge mt-1">
            <svg width="10" height="10" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L1 21h22L12 2z"/></svg>
            1,240 호각
          </div>
        </div>
      </div>

      <%# 응원팀 정보 %>
      <div class="flex items-center justify-between mb-12 px-4 py-3 border-l-2 border-blue-700 bg-blue-900/10">
        <div class="flex flex-col">
          <span class="text-[8px] font-mono text-zinc-500 uppercase tracking-widest">Supporting Team</span>
          <span class="text-xs font-black italic text-white">인천 유나이티드</span>
        </div>
        <div class="w-10 h-10 bg-zinc-900 border border-zinc-700 flex items-center justify-center overflow-hidden">
          <span class="text-[10px] font-black text-white">인</span>
        </div>
      </div>

      <%# 드로어 메뉴 %>
      <nav class="flex flex-col gap-2">
        <%= link_to "#", class: "flex items-center gap-4 p-4 hover:bg-white hover:text-black transition-all group" do %>
          <span class="font-mono text-[10px] font-black tracking-widest uppercase">My Information</span>
        <% end %>
        <%= link_to "#", class: "flex items-center gap-4 p-4 hover:bg-white hover:text-black transition-all group" do %>
          <span class="font-mono text-[10px] font-black tracking-widest uppercase">My VAR Moments</span>
        <% end %>
        <%= link_to "#", class: "flex items-center gap-4 p-4 hover:bg-white hover:text-black transition-all group" do %>
          <span class="font-mono text-[10px] font-black tracking-widest uppercase">Whistle Recharge</span>
        <% end %>
        <div class="h-px bg-zinc-800 my-4"></div>
        <%= link_to "#", class: "flex items-center gap-4 p-4 hover:bg-red-600 hover:text-white transition-all group text-zinc-500" do %>
          <span class="font-mono text-[10px] font-black tracking-widest uppercase">Logout</span>
        <% end %>
      </nav>

    </div>
  </div>
</div>

</div><%# /data-controller="user-drawer" %>
