<div class="min-h-screen p-4 md:p-8">
  <%= render "shared/nav" %>

  <main class="max-w-7xl mx-auto">
    <%= link_to matches_path, class: "inline-flex items-center gap-2 text-[var(--text-muted)] hover:text-white text-xs font-mono mb-6 transition-colors" do %>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
      ARCHIVE
    <% end %>

    <% case @match[:status] %>
    <% when :upcoming %>
      <%= render "matches/upcoming", match: @match %>
    <% when :live %>
      <%= render "matches/live", match: @match %>
    <% when :finished %>
      <%= render "matches/finished", match: @match %>
    <% else %>
      <%= render "matches/upcoming", match: @match %>
    <% end %>
  </main>
</div>
