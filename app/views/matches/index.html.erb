<div class="min-h-screen p-4 md:p-8">
  <%= render "shared/nav" %>

  <main class="max-w-7xl mx-auto">
    <h1 class="text-xl md:text-2xl font-black italic tracking-tighter uppercase mb-6">ARCHIVE — MATCHES</h1>

    <div class="ledger-surface overflow-hidden">
      <% @matches.each do |match| %>
        <%= link_to match_path(match[:id]), class: "match-row flex flex-wrap items-center gap-4 px-4 py-4 md:px-6 md:py-5 no-underline text-[var(--text-main)]" do %>
          <div class="w-full md:w-24 flex-shrink-0">
            <%= match_status_badge(match[:status]) %>
          </div>
          <div class="flex-1 min-w-0 grid grid-cols-3 gap-2 md:gap-4 items-center text-sm md:text-base">
            <div class="font-bold italic text-right truncate"><%= match[:home] %></div>
            <div class="text-center font-mono font-black text-lg md:text-xl">
              <% if match[:status] == :live %>
                <span class="text-[var(--accent-var)]"><%= match[:score_home] %> - <%= match[:score_away] %></span>
                <span class="block text-[10px] text-[var(--text-muted)] mt-1"><%= match[:minute] %>'</span>
              <% elsif match[:status] == :finished %>
                <%= match[:score_home] %> - <%= match[:score_away] %>
              <% else %>
                <span class="text-[var(--text-muted)]">VS</span>
              <% end %>
            </div>
            <div class="font-bold italic text-left truncate"><%= match[:away] %></div>
          </div>
          <div class="w-full md:w-auto text-[10px] md:text-xs font-mono text-[var(--text-muted)]">
            <%= match[:league] %> R<%= match[:round] %> · <%= match[:date] %> <%= match[:time] %> · <%= match[:venue] %>
          </div>
        <% end %>
      <% end %>
    </div>
  </main>
</div>
